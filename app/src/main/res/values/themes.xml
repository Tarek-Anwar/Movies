<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Movies" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/white</item>

        <item name="android:windowBackground">@color/gray_background</item>
        <item name="android:statusBarColor">@color/gray_background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- navigationBar handel -->
        <item name="android:navigationBarColor">@color/gray_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="Theme.Movies" parent="Base.Theme.Movies" />

    <style name="Theme.MainActivity" parent="Base.Theme.Movies">
        <item name="android:windowBackground">@drawable/launch_window_background</item>
        <item name="android:statusBarColor">@color/gray_background</item>
        <item name="android:navigationBarColor">@color/gray_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="postSplashScreenTheme">@style/Theme.Movies</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SearchTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:drawableEnd">@drawable/search_icon</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textColor">@color/gray_edittext</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>


    </style>

    <style name="DetailMovieTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="SmallTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">@string/overview</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchSmallTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">2dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>